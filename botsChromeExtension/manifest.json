{
  "manifest_version": 2,
  "name": "Soundcloud Bot",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["jquery-3.1.0.js"]
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["jquery-3.1.0.js", "main.js"],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": "icon.png",
    // "default_popup": "popup.html",
    "default_title": "Soundcloud Bot"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "activeTab",
    "https://*/*",
    "http://*/*"
  ]
}